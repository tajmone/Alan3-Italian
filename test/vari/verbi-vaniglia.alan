-- Alan >= 3.0beta6 build 1866 | Alan Italian >= v0.14.0-Alpha
--==============================================================================
-- "Verbi alla Vaniglia" by Tristano Ajmone, 2018.
--==============================================================================
OPTIONS WIDTH 81.

IMPORT 'libreria.i'.   -- ALAN Libreria Standard Italiana v2.1
IMPORT '../inc_debaca.i'. -- Comandi per il debugging


THE mia_AT IsA blocco_definizioni
  ------------------------------------------------------------------------------
  HAS       titolo  "Verbi alla Vaniglia".
  HAS  sottotitolo  "Avventura per eseguire test di base sui verbi.".
  HAS       autore  "Tristano Ajmone".
  HAS         anno   2018.
  HAS     versione  "1".
  HAS        AlanV  "v3.0beta6 build 1866".
  ------------------------------------------------------------------------------
END THE.



-- =============================================================================

----- L'Ufficio

-- =============================================================================

THE ufficio IsA stanza.
  -- NAME 'Nell''Ufficio'.
  NAME 'l''ufficio'.
  NAME ufficio.
  DESCRIPTION "L'ufficio è pervaso da un fastidioso ronzio."
END THE ufficio.


THE tavolo IsA supporto AT ufficio.
  -- ////////
END THE tavolo.

THE dizionario IsA object IN tavolo
  HAS xDesc "È un piccolo dizionario tascabile.".
END THE dizionario.

THE pianta IsA object AT ufficio.
  HAS articolo "la".
  IS scenario.
END THE pianta.

--------------------------------------------------------------------------------
-- L'APATIA
--------------------------------------------------------------------------------
-- Un'oggetto astratto, non esaminabile.
THE apatia IsA object AT ufficio.
  HAS articolo "l'".
  IS femminile.
  NAME apatia.
  IS NOT esaminabile.
  DESCRIPTION
    "Nell'aria c'è un'apatia così fitta che la si potrebbe tagliare con un coltello."
END THE apatia.


THE ronzio IsA suono AT ufficio.
  DESCRIPTION ""

  VERB ascolta
    DOES ONLY
      "Sembra il ronzio di un dispositivo elettrico."
  END VERB ascolta.
  
END THE ronzio.

-- =============================================================================

-- ATTORI PNG

-- =============================================================================
-- Popoliamo la scena con qualche PNG per testare le risposte.

--==============================================================================
-- L'Inserviente
--==============================================================================
-- Mettiamo un attore maschio senza nome proprio...
THE inserviente IsA maschio AT ufficio.
  HAS articolo "l'".
  NAME inserviente.
  HAS xDesc
    "L'inserviente è occupato a svolgere le sue mansioni.".
END THE inserviente.
--==============================================================================
-- Gina
--==============================================================================
-- Un'attrice con nome proprio...
THE Gina IsA femmina AT ufficio.
  HAS nome_proprio.
  HAS xDesc
    "Gina è una tua collega.".
END THE Gina.

--------------------------------------------------------------------------------
Start at ufficio.
DESCRIBE intestazione.
