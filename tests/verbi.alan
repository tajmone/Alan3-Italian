IMPORT 'library.i'. -- ALAN Standard Library v2.1
--------------------------------------------------------------------------------
THE my_game ISA DEFINITION_BLOCK

  HAS title    "TEST VERBI IMPLEMENTATI".   
  HAS subtitle "Verbi: prendi".            
  HAS author   "Tristano Ajmone".    
  HAS year     2018.       
  HAS version  "1".          

END THE.
--------------------------------------------------------------------------------

THE 'Sala Collaudo Verbi' ISA room
  DESCRIPTION "Questa ampia sala è lo stato dell'arte per il collaudo di verbi."
END THE 'Sala Collaudo Verbi'.

------------------
-- SCENERY OBJECTS
------------------
THE teca IsA LISTED_CONTAINER AT 'Sala Collaudo Verbi'
  NAME teca
  NAME la teca
  IS
    femminile.
  INDEFINITE ARTICLE "una"
  DEFINITE ARTICLE "la"
END THE teca.

THE piantana ISA object AT 'Sala Collaudo Verbi'
  IS
    scenery.
    femminile.
  NAME piantana
  NAME la piantana
  INDEFINITE ARTICLE "una"
  DEFINITE ARTICLE "la"
END THE piantana.

THE piante ISA object AT 'Sala Collaudo Verbi'
  IS
    femminile.
    scenery.
    plural.
  NAME piante
  NAME le piante
  INDEFINITE FORM "delle piante"
  DEFINITE ARTICLE "le"
END THE piante.

--------------------
-- UNTAKABLE OBJECTS
--------------------

-- This obj has NOT MOVABLE attr:
---------------------------------
THE statua ISA object AT 'Sala Collaudo Verbi'
  NAME statua
  NAME la statua
  IS
    femminile.
    NOT movable. --         <= Fixed in Place!
  INDEFINITE ARTICLE "una"
  DEFINITE ARTICLE "la"
END THE statua.

-- Sounds are not takable:
--------------------------
THE ronzio IsA sound AT 'Sala Collaudo Verbi'
  NAME ronzio
  NAME il ronzio
  INDEFINITE ARTICLE "un"
  DEFINITE ARTICLE "il"
  DESCRIPTION "Puoi udire un ronzio indistinto in sottofondo."
END THE ronzio.
------------------
-- TAKABLE OBJECTS
------------------
THE palla IsA object AT 'Sala Collaudo Verbi'
  NAME palla
  NAME la palla
  IS femminile.
  INDEFINITE ARTICLE "una"
  DEFINITE ARTICLE "la"
END THE palla.

THE orologio IsA object IN teca
  NAME orologio
  NAME 'l''orologio'
  INDEFINITE ARTICLE "un"
  DEFINITE ARTICLE "l'$$"
END THE orologio.


